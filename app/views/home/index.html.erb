<nav class="navbar bg-body-tertiary">
  <div class="container">
    <%= link_to 'Leaderboard', root_path, class: "navbar-brand" %>
  </div>
</nav>

<br>

<div class="row justify-content-center">
  <div class="col col-md-5">
    <div class="container-fluid">
      <table class="table table-hover">
        <thead>
          <th>Name</th>
          <th>Country</th>
          <th>Score</th>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= user.name %></td>
              <td><%= user.country %></td>
              <td><%= user.score %></td>
            </tr>
          <% end%>
        </tbody>
      </table>
    </div>
  </div>
</div>
